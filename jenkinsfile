//properties([parameters([string(defaultValue: 'dev1', name: 'StackName'), string(defaultValue: 'diskpart', name: 'Key'), string(defaultValue: 'disk', name: 'Value')])])

pipeline {
    agent any

     parameters {
        
        string(name: "STACK_NAME", defaultValue: "dev", trim: true, description: "Stack Name where you want to modify the parameter")
        string(name: "KEY", defaultValue: "hello", trim: true, description: "Key of the parameter you want to modify")
        string(name: "VALUE", defaultValue: "prod", trim: true, description: "Value of the parameter you want to modify")
       
    }
    stages {
        stage('Change Parameters In Stack') {
            steps {
                
                sh '''#!/bin/bash
                 
                 python3 cf_change_parameters.py $STACK_NAME $KEY $VALUE  

                  '''
            
                     
                 
            }
        }
    }
}